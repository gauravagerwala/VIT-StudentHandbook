<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    tools:context="vit.vithandbook.fragment.FeedbackFragment"
    android:layout_height="match_parent" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:id="@+id/from_tv"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="60dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/from_text"
        android:inputType="text"
        android:textSize="17sp"
        android:paddingTop="10dp"
        android:layout_alignBaseline="@+id/from_tv"
        android:layout_alignLeft="@+id/feedback_text"
        android:layout_alignStart="@+id/feedback_text"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Feedback"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:id="@+id/message_tv"
        android:layout_below="@+id/from_tv"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/feedback_text"
        android:textSize="17sp"
        android:scrollHorizontally="false"
        android:scrollbars="vertical"
        android:maxLines="6"
        android:inputType="textMultiLine"
        android:layout_alignTop="@+id/message_tv"
        android:layout_toRightOf="@+id/message_tv"
        android:layout_toEndOf="@+id/message_tv"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:paddingTop="5dp"
        android:layout_gravity="bottom"
        android:paddingBottom="5dp"
        android:text="Send"
        android:background="#062238"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:id="@+id/send_button"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150dp" />

</RelativeLayout>
