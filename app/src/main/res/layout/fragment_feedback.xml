<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Feedback"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:id="@+id/feedback_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:id="@+id/from_tv"
        android:layout_below="@+id/feedback_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="60dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/from_text"
        android:backgroundTint="@color/black"
        android:textSize="17sp"
        android:paddingTop="20dp"
        android:layout_alignBaseline="@+id/from_tv"
        android:layout_alignLeft="@+id/feedback_text"
        android:layout_alignStart="@+id/feedback_text"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:id="@+id/message_tv"
        android:layout_below="@+id/from_tv"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/feedback_text"
        android:textSize="17sp"
        android:scrollHorizontally="false"
        android:scrollbars="vertical"
        android:lines="5"
        android:background="@drawable/textbox"
        android:inputType="textMultiLine"
        android:layout_below="@+id/from_text"
        android:layout_toRightOf="@+id/message_tv"
        android:layout_toEndOf="@+id/message_tv"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Send"
        android:textSize="17sp"
        android:background="#062238"
        android:textColor="@color/white"
        android:id="@+id/send_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>