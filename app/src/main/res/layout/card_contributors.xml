<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_contributors"
    android:layout_width="200dp"
    android:layout_height="wrap_content" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ccffffff"
        android:padding="5dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/contributor_email"
            android:text="contributor@mail.com"
            android:layout_below="@+id/contributor_role"
            android:textColor="#cf001755"
            android:textSize="16sp"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/contributor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Contributor Name"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="#e0000000"
            android:textSize="20sp"
            android:layout_below="@+id/contributor_image"
            android:layout_centerHorizontal="true" />
        <TextView
            android:id="@+id/contributor_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contributor_name"
            android:text="Contributor Role"
            android:textStyle="bold"
            android:textColor="#cf165500"
            android:textSize="16sp"
            android:layout_centerHorizontal="true"/>
        <ImageView
             android:layout_width="140dp"
             android:layout_height="140dp"
             android:id="@+id/contributor_image"
             android:layout_centerHorizontal="true"
             android:src="@drawable/abc_btn_radio_material"
             />
    </RelativeLayout>
</android.support.v7.widget.CardView>
